<div class="mt-2">
    <% if (data && data.length > 0) { %>
        <h1 class="mb-4 text-xl font-bold mb-2"><%= title %></h1>
        <div class="flex flex-wrap -mx-2">
            <% for (var i = 0; i < data.length; i++) { %>
                <a href="/session_main/<%= data[i].id %>/<%= flag %>" class="flex flex-col justify-center items-center py-2 px-4 my-2 mx-2 bg-gray-200 rounded-lg">
                    <span class="text-xl font-bold">Session # <%= data[i].id %></span>
                    <span class="text-sm"><%= new Date(data[i].date).toLocaleDateString() %></span>
                    <span class="text-sm"><%= new Date(data[i].date).toLocaleTimeString() %></span>
                    <span class="text-sm"><%= data[i].count %> slots</span>
                </a>                 
            <% } %>
        </div>
    <% } %>    
</div>

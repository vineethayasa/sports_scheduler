<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <meta content="<%= csrfToken %>" name="csrf-token">
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <%- include("header.ejs") %>
    <div class="grid grid-cols-7 gap-6 px-4">
      <div class="col-start-1 col-span-2">
        <div style="display: flex;" class="mb-8 mt-4">
          <a href="/home" class="underline text-indigo-700 text-xl mr-2 ml-2">Home</a>
        </div>
      </div>

      <div class="col-start-3 col-span-3">
        <div class="flex justify-between items-center">
          <h6 class="py-4 text-3xl font-bold mb-2"><%= current_sport.sport_name %></h6>
          <% if (current_sport.userId == userid) { %>
          <span>
            <a href="/editsport/<%= current_sport.sport_name %>/<%= current_sport.id %>" class="mr-10 underline text-indigo-700 text-xl">Edit</a>
            <a href="/deletesport/<%= current_sport.id %>" class="underline text-indigo-700 text-xl">Delete</a>
          </span>
          <% } %>
        </div>
        <h1 class="text-2xl mb-2 font-bold">Sessions</h1>

       <%- include('sessionslist', {title:"Created by you",data: usersessions, flag:0}) %>
       <%- include('sessionslist', {title:"Other Available Sessions",data: othersessions,flag:0}) %>
       <%- include('sessionslist', {title:"Joined Sessions",data: joinedsessions,flag:0}) %>
       <%- include('sessionslist', {title:"Cancelled Sessions",data: cancelsessions,flag:2}) %>

        <div style="display: flex;" class="mb-8 mt-4">
          <a href="/sportsession/<%= current_sport.sport_name %>/<%= current_sport.id %>" class="underline text-indigo-700 text-xl mr-20">Create a new session</a>
          <a href="/previoussession/<%= current_sport.id %>" class="underline text-indigo-700 text-xl">View previous sessions</a>
        </div>
      </div>
    </div>
  </body>
</html>

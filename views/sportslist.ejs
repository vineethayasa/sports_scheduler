<div class="mt-5">
    <% if (data.length > 0) { %>
        <h1 class="text-2xl text-indigo-700 font-bold"><%= title %></h1>
        <ul class="list-disc">
            <% for (var i =0; i <data.length;  i++ ) { %>
                <li class="Sports-Item">
                    <a class="flex items-center py-1 px-2 my-1 text-xl hover:underline" href="/sport_main/<%= data[i].id %>">
                        <%= data[i].sport_name %>
                    </a>
                  </li>
            <% } %>
        </ul>
    <%} %>
</div>